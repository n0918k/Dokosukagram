<div class="container-fluid text-center">
<div class="container w-50">
<h2 class=" h2 bg-dark text-light p-4">パスワード再設定</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group text-left h3 mt-5">
    <%= f.label :email ,class:"mb-4"%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control mb-4 input-lg" %>
  </div>


  <div class="form-group mt-5">
    <%= f.submit "再設定用メールを送る" ,class: "btn btn-outline-primary w-100 btn-lg"%>
  </div>
<% end %>
</div>
<div class="container w-50 text-center mt-5 h4">
<%= render "users/shared/links" %>
</div>
</div>