<%= render "shared/header"%>

<div class="container text-center mt-3">
  <%= form_with model: @item,url: place_items_path(@place.id) do |f| %>

    <%= f.label :name ,"商品名"%>
    <%= f.text_field :name,id:"item_name" %>
    <%= f.label :store,"個数"%>
    <%= f.number_field :store,id: "item_store",class: 'col-xs-1'%>
    <%= f.file_field :image,id: "item_image"%>

    <%= f.submit '送信',class:"btn btn-primary"%>

  <% end %>
  <div class="mt-5">
  <div class="text-right">
  <%= link_to 'この場所を削除する',place_path(@place.id),method: :delete,class:"btn btn-danger ml-5 text-right"%>
</div>
  <p class="h1 mt-5"><%= @place.name%></p>
    <%= image_tag @place.image ,class: "item-image-lg"%>
  </div>
  <div class="mt-5 mb-5">
<div id='items'>

      <div class="place-wrapper ">
        <% @items.each do |item|%>
          <div class="place-item">
            <%= link_to place_item_path(item.id)do%>
              <div class="h4 text-dark">
                <%= item.name %>
              </div>
              <%= image_tag item.image.variant(resize:'250x250')%>
            <% end %>
          </div>
        <% end %>
      </div>
</div>
</div>