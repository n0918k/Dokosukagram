<%= render "shared/header"%>

<div class="container w-50">

<%= form_with model:@item,url: place_items_path(@place.id),local: true  do|f|%>

  <div class="form-group text-left h3 mt-5">
    <%= f.label :name,"場所の名前" ,class:"mb-4"%>
    <%= f.text_field :name,class:"form-control mb-4 input-lg" %>
  </div>
  <div class="form-group text-left h3 mt-5">
    <%= f.label :image,"画像を選択する",class:"btn btn-outline-secondary w-100 btn-lg",id:"file"%>
    <%= f.file_field :image,class:"form-control mb-4 input-lg",id:"item-image"%>
    <div id="preview"></div>

  </div>

  <div class="form-group mt-5">
    <%= f.submit "登録" ,class: "btn btn-outline-primary w-100 btn-lg"%>
  </div>
<% end %>
</div>
